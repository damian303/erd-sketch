doctype html
html
  head
    title Sketch
    meta(name="description", content="Free multi-user tool for producing entity relationship diagrams")
    meta(name="keywords", content="ERD entity relationship diagram draw create multi user free")
    meta(name="author", content="Damian Hobson erdsketch@gmail.com")
    link(href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet")
    link(href='/css/skeleton.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
  body.draw_body
    block content
      div.u-full-width.noselect
        div.row.u-full-width
          div#logo_holder.one.columns
          div#open.one.columns.menu_item
          div#save.one.columns.menu_item
          div#downloadPNG.one.columns.menu_item
          div#reset.one.columns.menu_item
          div#addTable.one.columns.menu_item
          div#addUser.one.columns.menu_item
          div#newDiagram.one.columns.menu_item
          div.three.columns.menu_item
            div.info_label
              | User : #{username}
              br
              form(name="change_name" onSubmit="return false;")
                div.input
                    span.label Diagram Name 
                    input(id="erd_name", type="text", name="name", value='#{erd_name}')
          div#logout.one.columns.menu_item
      div.row.u-full-width
        div#erd.twelve.columns
